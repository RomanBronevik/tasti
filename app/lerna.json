{
	"version": "independent",
	"npmClient": "npm",
	"command": {
		"publish": {
			"ignoreChanges": [ "ignored-file", "*.stories.js" ],
			"message": "chore(release): publish"
		},
		"bootstrap": {
			"ignore": "component-*",
			"npmClientArgs": [ "--no-package-lock" ]
		}
	},
	"packages": ["src/components/**", "src/view/**" ]
}
